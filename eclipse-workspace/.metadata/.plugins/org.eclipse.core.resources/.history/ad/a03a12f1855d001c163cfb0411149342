import java.util.Scanner;

class Spinebiz {
	public void itApps(String name1, String name4) {
		System.out.println(name1 + " works at Spinebiz");
		System.out.println(name4 + " is a colleague of " + name1);
	}
}

public class Employee {
 public static void main(String[] args) {
	 Spinebiz d = new Spinebiz();
	 Scanner r = new Scanner(System.in);
		System.out.println("Please provide an Input:");
		String name1 = r.nextLine();
		String name4 = r.nextLine();
	 d.itApps(name1, name4);
 }
}
