import java.util.Scanner;

class Spinebiz {
	public void itApps(String name, String name2) {
		Scanner r = new Scanner(System.in);
		System.out.println("Please provide an Input:");
		String name1 = r.nextLine();
		String name4 = r.nextLine();
		System.out.println(name + " works at Spinebiz");
		System.out.println(name2 + " is a colleague of " + name);
	}
}

public class Employee {
 public static void main(String[] args) {
	 Spinebiz d = new Spinebiz();
	 d.itApps(name1, name4);
 }
}
