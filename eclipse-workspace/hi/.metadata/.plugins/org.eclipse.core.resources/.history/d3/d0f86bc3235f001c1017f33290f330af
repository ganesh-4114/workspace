package assessment;

import java.util.Scanner;

class AreaofCircle 
	{
	   public static void main(String args[]) 
	    {   
		   double r, area;
	      Scanner input = new Scanner(System.in);
	         System.out.println("Enter the radius:");
	          r= input.nextDouble();
	          area=(22*r*r)/7 ;
	         System.out.println("Area of Circle: " + area);      
	   }
	}


